# ============================================
# CareerPilot AI - Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your actual keys

# Core AI Keys (required for AI features)
# Get your key from: https://aistudio.google.com/app/apikey
GOOGLE_GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_GENAI_API_KEY=your_gemini_api_key_here

# Public API Keys
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here
NEXT_PUBLIC_RAPIDAPI_KEY=your_rapidapi_key_here
NEXT_PUBLIC_RAPID_API_KEY=your_rapidapi_key_here
NEXT_PUBLIC_YOUTUBE_API_KEY=

# ============================================
# Clerk Authentication Configuration
# ============================================
# Get your keys at: https://dashboard.clerk.com/ → Your App → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# ============================================
# Optional Configurations
# ============================================

# Music API Keys (for focus mode or music features)
NEXT_PUBLIC_SPOTIFY_CLIENT_ID=
NEXT_PUBLIC_SPOTIFY_CLIENT_SECRET=
NEXT_PUBLIC_JAMENDO_CLIENT_ID=56d30c95

# Optional Firebase config
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Optional database (Neon/Postgres)
DATABASE_URL=

# API Configuration (update with your Vercel deployment URL)
NEXT_PUBLIC_API_BASE_URL=https://your-app-name.vercel.app/api
