{
  // TypeScript and JavaScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "typescript.suggest.includeCompletionsForModuleExports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",

  // JavaScript settings
  "javascript.suggest.autoImports": true,
  "javascript.suggest.includeCompletionsForModuleExports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",

  // Editor settings for better navigation
  "editor.gotoLocation.multipleReferences": "peek",
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.gotoLocation.multipleImplementations": "peek",

  // IntelliSense settings
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.parameterHints.enabled": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.wordBasedSuggestions": "off",

  // Auto import settings
  "autoimport.autoComplete": true,
  "autoimport.showNotifications": true,
  "autoimport.doubleQuotes": false,

  // Path intellisense
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,

  // Next.js specific settings
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // Files associations
  "files.associations": {
    "*.js": "javascriptreact",
    "*.jsx": "javascriptreact",
    "*.ts": "typescript",
    "*.tsx": "typescriptreact"
  },

  // VS Code Icon and UI Customization
  "workbench.iconTheme": "vscode-icons",
  "workbench.productIconTheme": "Default",
  
  // Terminal Customization with Icons
  "terminal.integrated.fontFamily": "JetBrains Mono, Cascadia Code, Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.lineHeight": 1.2,
  
  // Terminal Colors for better visibility against purple background
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.showActions": "always",
  "terminal.integrated.tabs.showActiveIndicator": true,
  
  // ====== DARK PURPLE NEBULA THEME ======
  // Deep night meets creative code energy
  "workbench.colorTheme": "Shades of Purple (Super Dark)",
  "workbench.colorCustomizations": {},
  
  // PANEL TABS WITH ICONS - Enhanced Visibility
  "workbench.panel.defaultLocation": "bottom",
  "workbench.panel.opensMaximized": "never",
  "workbench.panelPosition": "bottom",
  
  // Enable icons in panel tabs
  "workbench.editor.showIcons": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  
  // Editor Font and Visibility Settings
  "editor.fontFamily": "JetBrains Mono, Cascadia Code, Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.lineHeight": 1.5,
  "editor.fontLigatures": true,
  "workbench.sideBar.location": "left",
  
  // File Explorer Icons
  "explorer.decorations.colors": true,
  "explorer.decorations.badges": true,
  "explorer.fileNesting.enabled": false,
  "explorer.compactFolders": false,
  
  // File Extensions Visibility
  "explorer.fileNesting.expand": false,
  "files.simpleDialog.enable": true,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 20,
  
  // Labels and File Names - Force Visibility
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.tabCloseButton": "right",
  
  // Breadcrumb Icons
  "breadcrumbs.enabled": true,
  "breadcrumbs.icons": true,
  "breadcrumbs.symbolPath": "on",
  
  // Tab Icons
  "workbench.editor.showIcons": true,
  "workbench.editor.labelFormat": "medium",
  
  // Minimap
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  
  // Integrated Terminal PowerShell Profile with Icons
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoProfile"]
    },
    "Command Prompt": {
      "path": "cmd.exe",
      "icon": "terminal-cmd",
      "args": []
    },
    "Git Bash": {
      "path": "C:\\Program Files\\Git\\bin\\bash.exe",
      "icon": "terminal-bash",
      "args": ["--login"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  
  // Custom CSS for High Visibility
  "vscode_custom_css.imports": [
    "file:///d:/All Projects/CareerPilot AI/custom-vscode.css"
  ],
  "vscode_custom_css.policy": true,
  
  // Additional Visibility Settings
  "editor.tokenColorCustomizations": {
    "[Shades of Purple]": {
      "textMateRules": [
        {
          "scope": "explorer.file",
          "settings": {
            "foreground": "#ffffff"
          }
        }
      ]
    }
  },
  
  // Force file explorer visibility
  "workbench.experimental.settingsProfiles.enabled": false,
  "files.exclude": {},
  "search.exclude": {},
  "files.watcherExclude": {},
  "workbench.editor.tabActionLocation": "right"
}
